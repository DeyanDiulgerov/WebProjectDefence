@using WebProject.Models.GamingProductViewModel
@model ProductListViewModel

@{
    ViewBag.Title = "Edit Game";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Edit">
    <div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Company" class="form-label">Company</label>
                <input asp-for="@Model.Company" class="form-control" aria-required="true" />
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">Image URL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.AvailableFrom" class="form-label">Available From</label>
                <input asp-for="@Model.AvailableFrom" class="form-control" aria-required="true" />
                <span asp-validation-for="AvailableFrom" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Sales" class="form-label">Sales</label>
                <input asp-for="@Model.Sales" class="form-control" aria-required="true" />
                <span asp-validation-for="Sales" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label">Price</label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DiscountPrice" class="form-label">Discount Price</label>
                <input asp-for="@Model.DiscountPrice" class="form-control" aria-required="true" />
                <span asp-validation-for="DiscountPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Edit" />
            </div>
        </form>
    </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}